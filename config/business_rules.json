{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "1.0.0",
  "effective_date": "2025-10-17",
  "description": "Configurable business rules for call centre ticket routing and escalation",
  "metadata": {
    "last_updated": "2025-10-17T00:00:00Z",
    "updated_by": "system",
    "environment": "production"
  },
  
  "routing_thresholds": {
    "_comment": "Confidence thresholds for AI-based department routing",
    "credit_management_confidence": 0.95,
    "standard_confidence": 0.80,
    "hitl_trigger_threshold": 0.80,
    "dispute_detection_confidence": 0.95,
    "min_confidence_floor": 0.50,
    "max_confidence_ceiling": 1.00
  },
  
  "processing_time_sla": {
    "_comment": "Processing time targets in minutes for each stage",
    "ai_classification_minutes": 5,
    "service_desk_review_minutes": 10,
    "total_routing_minutes": 15,
    "max_processing_timeout_minutes": 30
  },
  
  "department_sla_hours": {
    "_comment": "Department-specific SLA response times in hours by rule ID",
    "R001_DISPUTE_EXPLICIT": 6,
    "R002_REFUND_REQUEST": 6,
    "R003_DOUBLE_BILLING": 6,
    "R004_ACCOUNT_LOCKED": 2,
    "R005_PASSWORD_RESET": 4,
    "R006_SECURITY_BREACH": 1,
    "R007_SERVICE_OUTAGE": 4,
    "R008_SLOW_INTERNET": 8,
    "R009_BILLING_INQUIRY": 12,
    "R010_PAYMENT_ISSUES": 8,
    "R011_NEW_SERVICE": 24,
