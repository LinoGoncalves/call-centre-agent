    "team_lead_age_days": 2,
    "production_support_age_days": 7,
    "p0_warning_minutes": 30,
    "p1_warning_hours": 4,
    "p2_warning_hours": 18,
    "p3_warning_hours": 30
  },
  
  "priority_sla_response": {
    "_comment": "Priority-based SLA response times",
    "P0_IMMEDIATE": {
      "response_hours": 1,
      "escalation_warning_minutes": 30,
      "description": "Critical outage or security incident"
    },
    "P1_HIGH": {
      "response_hours": 6,
      "escalation_warning_hours": 4,
      "description": "Service-impacting issue"
    },
    "P2_MEDIUM": {
      "response_hours": 24,
      "escalation_warning_hours": 18,
      "description": "Standard business issue"
    },
    "P3_STANDARD": {
      "response_hours": 36,
      "escalation_warning_hours": 30,
      "description": "Low-priority request"
    }
  },
  
  "accuracy_targets": {
    "_comment": "Quality metrics and targets",
    "dispute_detection_accuracy": 0.98,
    "department_routing_accuracy": 0.95,
    "false_positive_rate_max": 0.02,
    "internal_transfer_rate_max": 0.05
