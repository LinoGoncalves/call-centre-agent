      },
      "us": {
        "currency": "USD",
        "locale": "en_US",
        "symbol": "$",
        "description": "United States - Dollar"
      },
      "uk": {
        "currency": "GBP",
        "locale": "en_GB",
        "symbol": "Â£",
        "description": "United Kingdom - Pound"
